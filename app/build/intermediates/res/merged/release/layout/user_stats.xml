<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_stats"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.cchiang.lookforthings.MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/logout"
        android:id="@+id/logOutBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_alignBottom="@+id/gameSpecs" />

    <TextView
        android:text="Look for Things"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleView"
        android:textSize="45sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/titleView" />

    <Button
        android:id="@+id/galleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/titleView"
        android:layout_alignParentBottom="true"
        android:text="Gallery" />


    <ImageView
        android:id="@+id/lastPictureTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gameBtn"
        android:layout_alignEnd="@+id/galleryButton"
        android:layout_alignStart="@+id/userImage"
        android:layout_below="@+id/userImage"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="88dp"
        />

    <TextView
        android:text="Games: 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameSpecs"
        android:textSize="14sp"
        android:layout_alignTop="@+id/userImage"
        android:layout_toStartOf="@+id/galleryButton" />

    <TextView
        android:text="W/L ratio: 0.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winLose"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/pendingView"
        android:layout_alignStart="@+id/pendingView" />

    <TextView
        android:text="Pending: 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pendingView"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/gameSpecs"
        android:layout_alignStart="@+id/gameSpecs" />

    <Button
        android:text="Stats"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/statsBtn"
        android:layout_below="@+id/winLose"
        android:layout_alignStart="@+id/winLose"
        android:layout_marginTop="14dp"
        android:layout_alignEnd="@+id/pendingView"
        android:textSize="8sp" />


    <ImageView
        android:id="@+id/userImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titleView"
        android:layout_below="@+id/titleView"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/user" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Last Picture Taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/statsBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/dataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userImage"
        android:layout_centerVertical="true"
        android:text="Data Coll." />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userImage"
        android:layout_alignTop="@+id/logOutBtn"
        android:layout_marginStart="6dp"
        android:text="HolderText" />


</RelativeLayout>
