<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.cchiang.lookforthings.MainChatActivity">

    <Button
        android:text="Global Chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/globalChatButton" />

    <Button
        android:id="@+id/privateChatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/globalChatButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Find Friends" />

    <Button
        android:text="View Friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/viewFriendsButton"
        android:layout_below="@+id/privateChatButton"
        android:layout_alignEnd="@+id/globalChatButton" />
</RelativeLayout>
